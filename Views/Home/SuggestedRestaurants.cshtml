@{
    ViewBag.Title = "Suggested Restaurants";
}

<div>
    <h1>@ViewBag.Title</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Suggester Name</th>
                <th scope="col">Restaurant Name</th>
                <th scope="col">Favorite Dish</th>
                <th scope="col">Restaurant Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TopRestaurants.Models.Suggestion suggestion in Model)
            {
                <tr>
                    <td>@suggestion.Name</td>
                    <td>@suggestion.RestaurantName</td>
                    <td>@suggestion.FavoriteDish</td>
                    <td>@suggestion.PhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
</div>
